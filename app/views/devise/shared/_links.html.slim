- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Забыли пароль?", new_password_path(resource_name), class: 'dark_link pull-left'
  br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Не получили письмо с подтверждением?", new_confirmation_path(resource_name), class: 'dark_link pull-left'
  br
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Не получили инструкции разблокировки?", new_unlock_path(resource_name), class: 'dark_link pull-left'
